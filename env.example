# MySQL Source Database Configuration
MYSQL_HOST=mysql
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=secret
MYSQL_DATABASE=source_db

# ClickHouse Target Database Configuration
CLICKHOUSE_HOST=clickhouse
CLICKHOUSE_PORT=8123
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=
CLICKHOUSE_DATABASE=target_db

# Replication Settings

# Mode: "snapshot" (one-time copy) or "cdc" (real-time via binlog)
REPLICATION_MODE=snapshot

# Batch size for data transfer (default: 50000)
REPLICATION_BATCH_SIZE=50000

# Comma-separated list of tables to replicate (empty = all tables)
REPLICATION_TABLES=

# Drop existing tables before creating (default: false)
REPLICATION_DROP_EXISTING=false

# Number of tables to replicate in parallel (default: 1 = sequential)
REPLICATION_PARALLEL_TABLES=1
